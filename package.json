{
  "name": "@mapd/mapd-crossfilter",
  "version": "1.1.0",
  "officialVersion": "1.3.12",
  "description": "Fast multidimensional filtering for coordinated views.",
  "main": "./index.js",
  "repository": {
    "type": "git",
    "url": "http://github.com/map-d/mapd-crossfilter.git"
  },
  "watch": {
    "build": {
      "patterns": [
        "mapd-crossfilter"
      ],
      "extensions": "js",
      "ignore": ""
    }
  },
  "scripts": {
    "coverage": "npm test ; open coverage/lcov-report/index.html",
    "babel": "babel src --out-dir build",
    "build": "bash scripts/build.sh",
    "lint": "jscs src/**/*.js",
    "clean": "bash scripts/clean.sh",
    "shjs": "node --harmony_destructuring ../../node_modules/.bin/shjs",
    "test": "mocha --require test/config.js test/",
    "test:check-cover": "npm run shjs ../../scripts/check-coverage.js",
    "bump": "npm run shjs ../../scripts/check-coverage.js -- --bump",
    "test:cover": "../../node_modules/.bin/istanbul cover ../../node_modules/mocha/bin/_mocha -- --require test/config.js test/",
    "watch": "npm-watch",
    "webpack": "webpack"
  }
}
